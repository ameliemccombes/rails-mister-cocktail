<div class='container'>
  <div class="row fiche">
    <div class="col-xs-12 col-md-6">
      <%= cl_image_tag @cocktail.photo, height: 600, width: 400, crop: :fill %>
    </div>

    <div class="col-xs-12 col-md-6">
      <h1><%= @cocktail.name %></h1>

      <% @doses.each do |dose| %>
        <p><%= dose.description %></p>
        <p><%= dose.ingredient.name %></p>
        <p><%= link_to "Edit dose", edit_cocktail_dose_path(@cocktail, dose) %></p>
        <p><%= link_to "Delete dose", cocktail_dose_path(@cocktail, dose),
          method: :delete,
          data: { confirm: 'Are you sure?' } %></p>
      <% end %>

      <%= link_to "Add doses to this cocktail", new_cocktail_dose_path(@cocktail)%>

      <%= link_to "Back to list", cocktails_path %>
    </div>
  </div>
</div>
